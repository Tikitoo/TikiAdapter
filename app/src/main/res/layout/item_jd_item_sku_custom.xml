<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    >

    <LinearLayout
        android:id="@+id/item_jd_custom_sku_item_layout_top_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/item_jd_custom_sku_item_layout_type_tv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingRight="24dp"
            android:textColor="@color/color_black"
            android:textSize="14dp"
            android:textStyle="bold"
            tools:text="已选"
            />

        <RelativeLayout
            android:id="@+id/item_jd_custom_sku_item_layout_tag_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <TextView
            android:id="@+id/item_jd_custom_sku_item_layout_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@color/color_red"
            android:includeFontPadding="false"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:textColor="@color/color_red_light"
            android:textSize="12dp"
            tools:text="组合"
            />

            <ImageView
                android:id="@+id/item_jd_custom_sku_item_layout_tag_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

        </RelativeLayout>


        <TextView
            android:id="@+id/item_jd_custom_sku_item_layout_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lines="1"
            android:textColor="@color/color_black"
            android:textSize="14dp"
            tools:text="设计师推荐组合，最高可省¥586"
            />

        <ImageView
            android:id="@+id/item_jd_custom_sku_item_layout_right_click_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:background="@color/color_red"
            android:src="@drawable/drawable_jd_detail_sku_more"
            />

    </LinearLayout>

    <View
        android:id="@+id/item_jd_custom_sku_item_layout_bottom_divider_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_jd_custom_sku_item_layout_top_item_layout"
        android:background="#F3F3F3"
        />

</RelativeLayout>
